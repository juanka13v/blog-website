<%- include('./includes/header.ejs') %>

<%- include('includes/title-nav', {title: "dashboard", links: [
  {name: "home",ref: "/"},
  {name: "dashboard",ref: "/dashboard"}
]}) %>

<main class="container">

  <div class="dashboard">
    <form action="/create-post" method="post">
      <div class="form-field">
        <label for="title">Title :</label>
        <input type="text" placeholder="Enter a title" id="title" name="title" />
      </div>
      <div class="form-field">
        <label for="description">Description :</label>
        <input type="text" placeholder="Enter a description" id="description" name="description" />
      </div>
      <div class="form-field">
        <label for="markdown">Markdown :</label>
        <textarea
          name="markdown"
          id="markdown"
          cols="30"
          rows="10"
          placeholder="Enter a markdown sintax"
        ></textarea>
      </div>

      <button class="btn">Submit</button>
    </form>
  </div>
</main>



