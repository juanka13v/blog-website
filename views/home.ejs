    <p class="active">Home</p>
  </div>
</div>


<main class="container">
  <section class="article-container">
    <article class="post">
      <div class="post-header">
        <i class="bx bxs-calendar-event"></i>
        <span><%= formatDate(posts[0].createdAt); %></span>
        <i class="bx bx-alarm"></i>
        <span><%= posts[0].min %>  min read</span>
      </div>
      <div class="post-body">
        <h3><%= posts[0].title %></h3>
        <p>
          <%= posts[0].description %>
        </p>
      </div>
      <div class="post-footer">
        <div class="user">
          <i class="bx bx-user-circle"></i>
          <p>by <span><%= posts[0].author %></span></p>
        </div>
        <div class="tags">
          <% posts[0].tags.forEach(function(tag) { %>
