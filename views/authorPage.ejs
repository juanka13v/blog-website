<%- include('includes/header') %>

<%- include('includes/title-nav', {title:
"ricardo martinez", links: [ {name: "home",ref: "/"},
{name:'authors',ref:'/authors'}, {name:'ricardo',ref:'/'} ]}) %>

<main class="container author-container">
  <div class="author-header">
    <figure class="author-img">
      <i class="bx bxs-user-rectangle"></i>
    </figure>
    <div class="author-info">
      <h2><%= author.author %></h2>
      <span><i class='bx bx-receipt'></i> <p><%= author.posts.length %></p></span>
      <h3>Description:</h3>
      <p>
        <%= author.description %>
      </p>
    </div>
  </div>
  <div class="author-body">
    <%- include('includes/title-nav',{title: "posts", links:[]}) %> 

    <% if (author.posts.length == "0") { %>
      <div class="not-posts">
        <h3>(0) posts</h3>
      </div>
    <% }else{ %>
      <%- include('includes/posts',{ posts:author.posts, info, ref: "/author"}) %> 
    <% } %>
    
  </div>
</main>

<%- include('includes/footer') %>
