<%- include('includes/header') %> <%- include('includes/title-nav', {title:
"contact", links: [ {name: "home",ref: "/"}, {name: "contact",ref: "/contact"}
]}) %>

<main class="container">
  <div class="contact">
    <form class="contact-form">
      <div class="form-field">
        <label for="">Name:</label>
        <input required type="text" placeholder="Enter your name" />
      </div>
      <div class="form-field">
        <label for="">email:</label>
        <input
          required
          type="text"
          placeholder="Enter your email"
          pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
        />
      </div>
      <div class="form-field">
        <label for="">Asunto:</label>
        <input required type="text" placeholder="Enter subject" />
      </div>
      <div class="form-field">
        <label for="">Message:</label>
        <textarea required cols="30" rows="10"></textarea>
      </div>
      <button class="btn">Enviar</button>
    </form>

    <div class="contact-content">
      <div class="contact-logo">
        <i class="bx bx-envelope"></i>
      </div>
      <div class="contact-text">
        <h3>If you want to contact us</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Dolorem, non
          ullam. Quas minus vel voluptates!
        </p>
      </div>
    </div>
  </div>
</main>

<%- include('includes/footer') %>
